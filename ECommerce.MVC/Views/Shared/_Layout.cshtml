<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>G2A Navigation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/categories.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">G2A</a>
            
            <div class="search-bar d-flex">
                <input type="text" class="form-control search-input" placeholder="What are you looking for?" aria-label="Search">
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle round-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        All categories
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">All categories</a></li>
                        <li><a class="dropdown-item" href="#">Gaming</a></li>
                        <li><a class="dropdown-item" href="#">Software</a></li>
                        <li><a class="dropdown-item" href="#">Gift Cards</a></li>
                    </ul>
                </div>
                <button class="btn search-button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            
            <div class="user-controls">
                <div class="dropdown">
                    <button class="language-dropdown dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        EN / USD
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">EN / USD</a></li>
                        <li><a class="dropdown-item" href="#">FR / EUR</a></li>
                        <li><a class="dropdown-item" href="#">DE / EUR</a></li>
                    </ul>
                </div>

                <div class="user-actions"></div>
                    <div class="d-flex align-items-center ms-3">
                        @if (User.Identity != null && (User.Identity?.IsAuthenticated ?? false))
                        {
                            <a href="/Profile">
                                <img src="/images/default-avatar.png" class="rounded-circle" style="width: 40px; height: 40px;" />
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="text-white me-2">Sign in</a>
                            <a href="#" class="text-white">Register</a>
                        }
                    </div>
                </div>
                
                <button class="btn btn-circle ms-3">
                    <i class="bi bi-heart"></i>
                </button>
                
                <button class="btn btn-circle">
                    <i class="bi bi-cart3"></i>
                </button>
            </div>
        </div>
    </nav>
    
    <div class="categories-nav">
        <div class="container">
            <div class="category-dropdown position-relative">
                <button id="toggleCategories">
                    <i class="bi bi-list me-2"></i> CATEGORIES
                </button>
                
                <div class="categories-submenu">
                    <a href="#">Bestsellers</a>
                    <a href="#">Steam Gift Cards</a>
                    <a href="#">Random Keys</a>
                    <a href="#">Software</a>
                </div>
                
                <button class="premium-button ms-auto">
                    Save more with G2A Plus
                </button>

                <div id="categoryList" class="custom-dropdown-menu d-none position-absolute">
                    <vc:category-menu></vc:category-menu>
                </div>
            </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/layout.js"></script>

    @RenderBody()
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }

</body>
</html>